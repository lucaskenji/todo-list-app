<h1>Lista de tarefas</h1>
<br>
<a class="btn btn-primary" href="/add/"><i class="fa fa-plus"></i>&nbsp;Nova tarefa</a>
<br><br>

<div class="card">
	<div class="card-body">

		<h3>{{quantidade}}</h3>
		{{#each tarefas}}
			<div class="card mt-2">
				<div class="card-body">
					<h3>{{tarefa}}</h3>
					{{descricao}}<br>
					<small>Adicionado em {{data}}</small><br>
					<a class="btn btn-danger" href="/delete/{{_id}}"><i class="fa fa-trash"></i>&nbsp;Deletar</a>
				</div>
			</div>
		{{else}}
			<div class="card">
				<div class="card-body">
					Oba, sem tarefas.
				</div>
			</div>
		{{/each}}

	</div>
</div>